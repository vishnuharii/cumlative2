﻿@model cumulative2.Models.Teacher
@{
    ViewBag.Title = "DeleteConfirm";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model.Id">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete @Model.TfName @Model.TlName?</h2>
    <p>This action cannot be undone.</p>
    <form method="POST" action="/Teacher/Delete/@Model.Id">
        <button class="delbutton">
            Confirm Delete
        </button>
    </form>
</div>
